@model Orion.Pages.Admin.AddSuperModel
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="cssAdmin/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="cssAdmin/custom.css">
    <!-- Box Icons -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
    <!-- Additional Custom CSS -->
    <link rel="stylesheet" href="cssAdmin/checkout.css">
    <title>Supervisor Signup</title>
</head>
<body>
    <div class="wrapper">
        <div class="body-overlay"></div>

        <!-- Sidebar -->
        <nav id="sidebar">
            <div class="sidebar-header">
                <h3><img src="img/GRAD logo dark.png" class="img-fluid" /><span id="admoon">Welcome Amr</span></h3>
            </div>
            <ul class="list-unstyled components">
                <li class="active">
                    <a href="Dashboard.html" class="dashboard"><i class="material-icons">dashboard</i><span>Dashboard</span></a>
                </li>
                <li class="dropdown">
                    <a href="#pageSubmenu5" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">border_color</i><span>Forms</span>
                    </a>
                    <ul class="collapse list-unstyled menu" id="pageSubmenu5">
                        <li><a href="AddAdmin.html">Add Admin</a></li>
                        <li><a href="addCategory.html">Add Category</a></li>
                        <li><a href="addProd.html">Add Products</a></li>
                        <li><a href="AddSuper.html">Add Supervisors</a></li>
                        <li><a href="AddOrphanage.html">Add Orphanage</a></li>
                        <li><a href="editOrphanage.html">Edit Orphanage</a></li>
                        <li><a href="EditProd.html">Edit Products</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#pageSubmenu6" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">grid_on</i><span>Tables</span>
                    </a>
                    <ul class="collapse list-unstyled menu" id="pageSubmenu6">
                        <li><a href="#">Page 1</a></li>
                        <li><a href="#">Page 2</a></li>
                        <li><a href="#">Page 3</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#pageSubmenu7" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                        <i class="material-icons">content_copy</i><span>Pages</span>
                    </a>
                    <ul class="collapse list-unstyled menu" id="pageSubmenu7">
                        <li><a href="adminMaterial.html">Materials</a></li>
                        <li><a href="ContactUs.html">Contact Us</a></li>
                        <li><a href="details.html">Details</a></li>
                        <li><a href="orphanage.html">Orphanage</a></li>
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- Page Content -->
        <div id="content">
            <div class="top-navbar">
                <nav class="navbar navbar-expand-lg">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="d-xl-block d-lg-block d-md-none d-none">
                            <span class="material-icons">arrow_back_ios</span>
                        </button>
                        <a class="navbar-brand" href="#">Orphanages</a>
                        <button class="d-inline-block d-lg-none ml-auto more-button" type="button" data-toggle="collapse"
                                data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="material-icons">more_vert</span>
                        </button>
                    </div>
                </nav>
            </div>
        </div>

        <div class="container">
            <form action="">
                <div class="row">
                    <div class="col">
                        <h3 class="title">Personal Information</h3>
                        <div class="inputBox">
                            <span>Full Name</span>
                            <input type="text" asp-for="User.FirstName" placeholder="John deo" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Email</span>
                            <input type="email" asp-for="User.Mail" placeholder="folan@gmail.com" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Password</span>
                            <input type="password" asp-for="User.Password" placeholder="********" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Confirm Password</span>
                            <input type="password" asp-for="User.Password" placeholder="********" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Phone Number</span>
                            <input type="text" asp-for="User.PhoneNumber" placeholder="0123456789" class="input" required>
                        </div>
                        <div class="inputBox">
                            <span>Gender</span>
                            <select name="gender" id="gender" asp-for="User.Gender">
                                <option value="male">Male</option>
                                <option value="female">Female</option>
                            </select>
                        </div>
                        <div class="flex">
                            <div class="inputBox">
                                <span>Date of Birth</span>
                                <input type="date" asp-for="User.BirthDate" placeholder="30/3/2003" class="input" required>
                            </div>
                            <div class="inputBox">
                                <span>Profile Image</span>
                                <input type="file" asp-for="Supervisor.SupervisorPhoto" placeholder="Enter Your Image" class="input" required>
                            </div>
                        </div>
                    </div>

                    <div class="col">
                        <h3 class="title">Skill Information</h3>
                        <div class="inputBox">
                            <span>Responsible Region</span>
                            <select name="region" id="region" asp-for="Supervisor.SupervisorRegion">
                                <option value="dokki">Dokki</option>
                                <option value="nasr city">Nasr City</option>
                            </select>
                        </div>
                        <div class="inputBox">
                            <span>Skill</span>
                            <select name="skill" id="skill" asp-for="Supervisor.SupervisorSkill">
                                <option value="resin">Resin</option>
                                <option value="crochet">Crochet</option>
                                <option value="beads">Beads</option>
                                <option value="punch needle">Punch Needle</option>
                                <option value="none">None</option>
                            </select>
                        </div>
                        <div class="inputBox">
                            <span>Orphanage</span>
                            <div id="supSiCh" asp-for="Supervisor.SupervisorInfo">
                                <div class="productCheck" >
                                    <input type="checkbox" id="check1" class="upcheck">
                                    <label for="check1">Dar el aml</label>
                                </div>
                                <div class="productCheck">
                                    <input type="checkbox" id="check2" class="upcheck">
                                    <label for="check2">Dar hayah</label>
                                </div>
                                <div class="productCheck">
                                    <input type="checkbox" id="check3" class="upcheck">
                                    <label for="check3">Little Sparks</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="BTBOT"><input type="submit" value="Add" class="button22"></div>
            </form>
        </div>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="js/jquery-3.3.1.slim.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('#sidebarCollapse').on('click', function () {
                $('#sidebar').toggleClass('active');
                $('#content').toggleClass('active');
            });
            $('.more-button,.body-overlay').on('click', function () {
                $('#sidebar,.body-overlay').toggleClass('show-nav');
            });
        });
    </script>
</body>
</html>
