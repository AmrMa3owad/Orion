                </div>
                <div class="description">
                    <h3 class="title">Product Info</h3>
                    <p class="text">@Model.Product.Description</p>
                </div>
                <div class="color-container">
                    <h3 class="title">Color</h3>
                    <div class="colors">
                        <span class="color active" primary="#7e6e95" color="purple"></span>
                        <span class="color" primary="#f84848" color="red"></span>
                        <span class="color" primary="#29b864" color="green"></span>
                        <span class="color" primary="#ff5521" color="orange"></span>
                        <span class="color" primary="#444" color="black"></span>
                    </div>
                <div class="buy-price">
                        <a href="checkout.html" class="buy " class="add-cart"><i class="fas fa-shopping-cart"></i>Add to cart</a>
                    <div class="price">
                        <i class="fas fa-dollar-sign"></i>
                        <h1 class="product-price">$@Model.Product.ProductPrice</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <h1>Feedbacks</h1>

    <div class="writtenFeed">
        <div class="card-review">
