                <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Product.ProductImage)" alt="" class="shoe show product-img" color="purple">
            </div>
            <div class="info">
                <div class="shoeName">
                    <div>
                        <h1 class="big " class="product-title">@Model.Product.ProductName</h1>
                        <span class="new">new</span>
                    </div>
