@page
@model donateModel
@{
    Layout = "~/pages/shared/_Layout-Dark.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- custom css file link  -->
    <link rel="stylesheet" href="/cssEndUser/checkout.css">
    <link rel="stylesheet" href="/cssEndUser/layout.css">
    <link rel="stylesheet" href="fontawesome-free-6.4.0-web/css/all.min.css">

    <title>Donate </title>

</head>
<body>

<div class="container-donate">
  <div class="shryta"> <img src="img/mainnpay.jpg" alt="" srcset=""></div>


      <div class="row">

          <div class="col">

              <h3 class="title">Donation details</h3>

              <div class="inputBox">
                  <span>full name :</span>
                  <input type="text" placeholder="john deo">
              </div>
              <div class="inputBox">
                  <span>email :</span>
                  <input type="email" placeholder="example@example.com">
              </div>
              <div class="flex">
                <div class="inputBox">
                    <span>Donation:</span>
                    <input type="number" placeholder="10LE">
                </div>
              </div><br><br>
              <h5 style="color: #ed927e; text-align: center; text-decoration: wavy;">"Thank you for shining your light on our project and helping our little stars sparkle brighter."</h5>
              

          </div>

          <div class="col">

              <h3 class="title">Donation way</h3>

              <form action="#">
                <input type="radio" name="payment" id="visa">
                <input type="radio" name="payment" id="mastercard">
                <input type="radio" name="payment" id="paypal">
                <input type="radio" name="payment" id="AMEX">
    
    
                <div class="category">
                    <label for="visa" class="visaMethod">
                        <a href="visa.html"><div class="imgName">
                            <div class="imgContainer visa">
                                <img src="https://i.ibb.co/vjQCN4y/Visa-Card.png" alt="">
                            </div>
                            <span class="name">VISA</span>
                        </div></a>
                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #6064b6;"></i></span>
                    </label>
    
                    <label for="mastercard" class="mastercardMethod">
                        <div class="imgName">
                            <div class="imgContainer mastercard">
                                <img src="img/idCbZQ9q4z_logos.png" alt="">
                            </div>
                            <span class="name">Fawry</span>
                        </div>
                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #6064b6;"></i></span>
                    </label>
    
                    <label for="paypal" class="paypalMethod">
                        <div class="imgName">
                            <div class="imgContainer paypal">
                                <img src="img/unnamed.png" alt="">
                            </div>
                            <span class="name">Aman</span>
                        </div>
                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #6064b6;"></i></span>
                    </label>
    
                    <label for="AMEX" class="amexMethod">
                        <div class="imgName">
                            <div class="imgContainer AMEX">
                                <img src="img/pound.png" alt="">
                            </div>
                            <span class="name">Cash</span>
                        </div>
                        <span class="check"><i class="fa-solid fa-circle-check" style="color: #6064b6;"></i></span>
                    </label>
                </div>
            </form>
            <div class="BTBOT"> <input type="submit" value="Donate" class="button22"></div>

              </div>

          </div>
          </div>
      </div>
      




</div>
    <!-- link js -->
    <script src="~/js/mainCart.js" asp-append-version="true"></script>
  

</body>
</html>