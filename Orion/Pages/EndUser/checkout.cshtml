@page
@model checkoutModel

@section PageScripts {
    <script src='~/'></script>
}
@{
    Layout = "~/pages/shared/_Layout-Dark.cshtml";
}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- custom css file link  -->
    <link rel="stylesheet" href="/cssEndUser/checkout.css">
    <link rel="stylesheet" href="/cssEndUser/layout.css">
    <link rel="stylesheet" href="fontawesome-free-6.4.0-web/css/all.min.css">

    <title>Checkout </title>

</head>
<body>
    

    <div class="container-donate">
        <div class="shryta"> <img src="img/mainnpay.jpg" alt="" srcset=""></div>

        <form action="">

            <div class="row">

                <div class="col">

                    <h3 class="title">billing address</h3>

                    <div class="inputBox">
                        <span>full name :</span>
                        <input type="text" placeholder="john deo">
                    </div>
                    <div class="inputBox">
                        <span>email :</span>
                        <input type="email" placeholder="example@example.com">
                    </div>
                    <div class="inputBox">
                        <span>address :</span>
                        <input type="text" placeholder="room - street - locality">
                    </div>
                    <div class="inputBox">
                        <span>city :</span>
                        <input type="text" placeholder="mumbai">
                    </div>

                    <div class="flex">
                        <div class="inputBox">
                            <span>state :</span>
                            <input type="text" placeholder="india">
                        </div>
                        <div class="inputBox">
                            <span>zip code</span>
                            <input type="text" placeholder="123 456">
                        </div>
                    </div>

                </div>

                <div class="col">

                    <h3 class="title">payment</h3>

                    <div class="inputBox">
                        <span>cards accepted :</span>
                        <a href="visa.html"> <img src="img/card_img.png" alt=""></a>
                    </div>
                    <div class="inputBox">
                        <span>Fawry code :</span>
                        <input type="text" placeholder="1111-2222-3333-4444">
                    </div>
                    <div class="inputBox">
                        <span>Aman code :</span>
                        <input type="number" placeholder="1111-2222-3333-4444">
                    </div>
                    <div class="inputBox">
                        <span>Donate for Orion stars :</span>
                        <input type="text" placeholder="5 LE">
                    </div>

                    <div class="flex">
                        <div class="inputBox">
                            <span>passcode</span>
                            <input type="number" placeholder="2022">
                        </div>
                        <div class="inputBox">
                            <span>none :</span>
                            <input type="text" placeholder="1234">
                        </div>
                    </div>

                </div>

            </div>


            <div class="BTBOT"> <input type="submit" value="Checkout" class="button22"></div>

        </form>

    </div>
   
    <!-- link js -->
    <script src="~/js/mainCart.js" asp-append-version="true"></script>


</body>
</html>